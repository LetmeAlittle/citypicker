<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_public_titlebar"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary"
              android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_public_titlebar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_public_titlebar_left_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:src="@mipmap/back_left_write"
                    />

                <TextView
                    android:id="@+id/tv_public_titlebar_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/middle_size"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_public_titlebar_left_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/lager_size"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/ll_public_titlebar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_public_titlebar_right_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_public_titlebar_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/middle_size"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_public_titlebar_right_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_public_titlebar_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="城市选择"
            android:textColor="@android:color/white"
            android:textSize="@dimen/lager_size"/>

    </FrameLayout>
</LinearLayout>